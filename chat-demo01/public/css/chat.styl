lucuma = #F7B706
verdepasto= #4D9700
azul = #0000EB
gris =  #7FFFF
naranja = #DD4F24


body
	background lucuma

footer
	background naranja
	color rgba(white, 0.5)
	padding 1em 0
	text-align center
	width 100%

	h3
		font-size 14px
		font-weight normal

		strong
			display block

form
	padding 0.8em

	input
		border: 1px solid #888
		border-radius 5px
		padding 0.2em 0.6em

	input[type="submit"]
		background #22BCE0
		border 1px solid #22BCE0
		box-shadow rgba(0,0,0,0.5) 5px 5px 20px
		font-style italic
		text-shadow rgba(0,0,0,0.5) 2px 2px 5px
		color white
	
	textarea
		width 600px
		height 120px
		border 3px solid #cccccc
		padding 5px
		font-family Tahoma, sans-serif
		background-image url(bg.gif)
		background-position bottom right
		background-repeat no-repeat

	label
		display inline-block
		width 60px
	
header
	background verdepasto
	color gris
	padding 0.5em
	position relative
	z-index 2
	overflow hidden

	.logo

		float right
		width 150px

		img 
			width 150px
			border-radius 50%
	.titular
		margin 0 80px 0 70px
	.titulo
		font-size 1.1em
		font-weight normal
		margin 0
		padding 0
	
.posts
	padding 0.5em









